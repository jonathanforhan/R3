{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cc",
        "CMAKE_CXX_COMPILER": "c++"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "R3_BUILD_DEBUG": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE":  true,
        "R3_LOG_INFO":  true,
        "R3_LOG_WARNING":  true,
        "R3_LOG_ERROR": true,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "release-base",
      "description": "base release configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "R3_BUILD_RELEASE": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE":  true,
        "R3_LOG_INFO":  true,
        "R3_LOG_WARNING":  true,
        "R3_LOG_ERROR":  true,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "dist-base",
      "description": "base distribution configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "R3_BUILD_DIST": true,
        "R3_LOGGING_ENABLED": false,
        "R3_LOG_VERBOSE":  false,
        "R3_LOG_INFO":  false,
        "R3_LOG_WARNING":  false,
        "R3_LOG_ERROR":  false,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "Windows-Vulkan-Debug",
      "displayName": "Windows Vulkan Debug",
      "inherits": [ "windows-base", "debug-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-Vulkan-Release",
      "displayName": "Windows Vulkan Release",
      "inherits": [ "windows-base", "release-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-Vulkan-Dist",
      "displayName": "Windows Vulkan Dist",
      "inherits": [ "windows-base", "dist-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-OpenGL-Debug",
      "displayName": "Windows OpenGL Debug",
      "inherits": [ "windows-base", "debug-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Windows-OpenGL-Release",
      "displayName": "Windows OpenGL Release",
      "inherits": [ "windows-base", "release-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Windows-OpenGL-Dist",
      "displayName": "Windows OpenGL Dist",
      "inherits": [ "windows-base", "dist-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Linux-Vulkan-Debug",
      "displayName": "Linux Vulkan Debug",
      "inherits": [ "linux-base", "debug-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Linux-Vulkan-Release",
      "displayName": "Linux Vulkan Release",
      "inherits": [ "linux-base", "release-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Linux-Vulkan-Dist",
      "displayName": "Linux Vulkan Dist",
      "inherits": [ "linux-base", "dist-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Linux-OpenGL-Debug",
      "displayName": "Linux OpenGL Debug",
      "inherits": [ "linux-base", "debug-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Linux-OpenGL-Release",
      "displayName": "Linux OpenGL Release",
      "inherits": [ "linux-base", "release-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Linux-OpenGL-Dist",
      "displayName": "Linux OpenGL Dist",
      "inherits": [ "linux-base", "dist-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    }
  ]
}