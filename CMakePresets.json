{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "opengl-base",
      "hidden": true,
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "vulkan-base",
      "hidden": true,
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "R3_BUILD_DEBUG": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_EDITOR": true,
        "R3_TESTS": true
      }
    },
    {
      "name": "release-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "R3_BUILD_RELEASE": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_EDITOR": true,
        "R3_TESTS": true
      }
    },
    {
      "name": "dist-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "R3_BUILD_DISTRIBUTION": true,
        "R3_LOG_VERBOSE": false,
        "R3_LOG_INFO": false,
        "R3_LOG_WARNING": false,
        "R3_LOG_ERROR": false,
        "R3_EDITOR": false,
        "R3_TESTS": true
      }
    },
    {
      "name": "MSVC-OpenGL-Debug",
      "inherits": [ "base", "msvc-base", "debug-base", "opengl-base"]
    },
    {
      "name": "MSVC-OpenGL-Release",
      "inherits": [ "base", "msvc-base", "release-base", "opengl-base"]
    },
    {
      "name": "MSVC-OpenGL-Dist",
      "inherits": [ "base", "msvc-base", "dist-base", "opengl-base"]
    },
    {
      "name": "GCC-OpenGL-Debug",
      "inherits": [ "base", "gcc-base", "debug-base", "opengl-base"]
    },
    {
      "name": "GCC-OpenGL-Release",
      "inherits": [ "base", "gcc-base", "release-base", "opengl-base"]
    },
    {
      "name": "GCC-OpenGL-Dist",
      "inherits": [ "base", "gcc-base", "dist-base", "opengl-base"]
    },
    {
      "name": "Clang-OpenGL-Debug",
      "inherits": [ "base", "clang-base", "debug-base", "opengl-base"]
    },
    {
      "name": "Clang-OpenGL-Release",
      "inherits": [ "base", "clang-base", "release-base", "opengl-base"]
    },
    {
      "name": "MSVC-Vulkan-Debug",
      "inherits": [ "base", "msvc-base", "debug-base", "vulkan-base"]
    },
    {
      "name": "MSVC-Vulkan-Release",
      "inherits": [ "base", "msvc-base", "release-base", "vulkan-base"]
    },
    {
      "name": "MSVC-Vulkan-Dist",
      "inherits": [ "base", "msvc-base", "dist-base", "vulkan-base"]
    },
    {
      "name": "GCC-Vulkan-Debug",
      "inherits": [ "base", "gcc-base", "debug-base", "vulkan-base"]
    },
    {
      "name": "GCC-Vulkan-Release",
      "inherits": [ "base", "gcc-base", "release-base", "vulkan-base"]
    },
    {
      "name": "GCC-Vulkan-Dist",
      "inherits": [ "base", "gcc-base", "dist-base", "vulkan-base"]
    },
    {
      "name": "Clang-Vulkan-Debug",
      "inherits": [ "base", "clang-base", "debug-base", "vulkan-base"]
    },
    {
      "name": "Clang-Vulkan-Release",
      "inherits": [ "base", "clang-base", "release-base", "vulkan-base"]
    },
    {
      "name": "Clang-Vulkan-Dist",
      "inherits": [ "base", "clang-base", "dist-base", "vulkan-base"]
    }
  ]
}
