{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Win64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "Win32-base",
      "hidden": true,
      "inherits": "Win64-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },
    {
      "name": "Linux64-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cc",
        "CMAKE_CXX_COMPILER": "c++"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "Linux32-base",
      "hidden": true,
      "inherits": "Linux64-base",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "R3_BUILD_DEBUG": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE":  true,
        "R3_LOG_INFO":  true,
        "R3_LOG_WARNING":  true,
        "R3_LOG_ERROR":  true
      }
    },
    {
      "name": "release-base",
      "description": "base release configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "R3_BUILD_RELEASE": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE":  true,
        "R3_LOG_INFO":  true,
        "R3_LOG_WARNING":  true,
        "R3_LOG_ERROR":  true
      }
    },
    {
      "name": "dist-base",
      "description": "base distribution configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "R3_BUILD_DIST": true,
        "R3_LOGGING_ENABLED": false,
        "R3_LOG_VERBOSE":  false,
        "R3_LOG_INFO":  false,
        "R3_LOG_WARNING":  false,
        "R3_LOG_ERROR":  false
      }
    },
    {
      "name": "Win64-Vulkan-Debug",
      "displayName": "Win64 Vulkan Debug",
      "inherits": [ "Win64-base", "debug-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Win64-Vulkan-Release",
      "displayName": "Win64 Vulkan Release",
      "inherits": [ "Win64-base", "release-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Win64-Vulkan-Dist",
      "displayName": "Win64 Vulkan Dist",
      "inherits": [ "Win64-base", "dist-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Win64-OpenGL-Debug",
      "displayName": "Win64 OpenGL Debug",
