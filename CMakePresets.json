{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang.exe",
        "CMAKE_CXX_COMPILER": "clang++.exe"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "R3_BUILD_DEBUG": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_BUILD_TESTS": true,
        "R3_BUILD_EDITOR": true
      }
    },
    {
      "name": "release-base",
      "description": "base release configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "R3_BUILD_RELEASE": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_BUILD_TESTS": true,
        "R3_BUILD_EDITOR": true
      }
    },
    {
      "name": "dist-base",
      "description": "base distribution configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "R3_BUILD_DIST": true,
        "R3_LOGGING_ENABLED": false,
        "R3_LOG_VERBOSE": false,
        "R3_LOG_INFO": false,
        "R3_LOG_WARNING": false,
        "R3_LOG_ERROR": false,
        "R3_BUILD_TESTS": true,
        "R3_BUILD_EDITOR": false
      }
    },
    {
      "name": "MSVC-Vulkan-Debug",
      "inherits": [ "base", "debug-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "MSVC-Vulkan-Release",
      "inherits": [ "base", "release-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "MSVC-Vulkan-Dist",
      "inherits": [ "base", "dist-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "MSVC-OpenGL-Debug",
      "inherits": [ "base", "debug-base", "msvc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "MSVC-OpenGL-Release",
      "inherits": [ "base", "release-base", "msvc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "MSVC-OpenGL-Dist",
      "inherits": [ "base", "dist-base", "msvc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "GCC-Vulkan-Debug",
      "inherits": [ "base", "debug-base", "gcc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "GCC-Vulkan-Release",
      "inherits": [ "base", "release-base", "gcc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "GCC-Vulkan-Dist",
      "inherits": [ "base", "dist-base", "gcc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "GCC-OpenGL-Debug",
      "inherits": [ "base", "debug-base", "gcc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "GCC-OpenGL-Release",
      "inherits": [ "base", "release-base", "gcc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "GCC-OpenGL-Dist",
      "inherits": [ "base", "dist-base", "gcc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Clang-Vulkan-Debug",
      "inherits": [ "base", "debug-base", "clang-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Clang-Vulkan-Release",
      "inherits": [ "base", "release-base", "clang-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Clang-Vulkan-Dist",
      "inherits": [ "base", "dist-base", "clang-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Clang-OpenGL-Debug",
      "inherits": [ "base", "debug-base", "clang-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Clang-OpenGL-Release",
      "inherits": [ "base", "release-base", "clang-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Clang-OpenGL-Dist",
      "inherits": [ "base", "dist-base", "clang-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    }
  ]
}