{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 2,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "msvc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "gcc-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc.exe",
        "CMAKE_CXX_COMPILER": "g++.exe"
      }
    },
    {
      "name": "clang-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang.exe",
        "CMAKE_CXX_COMPILER": "clang++.exe"
      }
    },
    {
      "name": "debug-base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "R3_BUILD_DEBUG": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "release-base",
      "description": "base release configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "R3_BUILD_RELEASE": true,
        "R3_LOGGING_ENABLED": true,
        "R3_LOG_VERBOSE": true,
        "R3_LOG_INFO": true,
        "R3_LOG_WARNING": true,
        "R3_LOG_ERROR": true,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "dist-base",
      "description": "base distribution configuration",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "R3_BUILD_DIST": true,
        "R3_LOGGING_ENABLED": false,
        "R3_LOG_VERBOSE": false,
        "R3_LOG_INFO": false,
        "R3_LOG_WARNING": false,
        "R3_LOG_ERROR": false,
        "R3_BUILD_TESTS": true
      }
    },
    {
      "name": "Windows-Vulkan-Debug-MSVC",
      "inherits": [ "windows-base", "debug-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-Vulkan-Release-MSVC",
      "inherits": [ "windows-base", "release-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-Vulkan-Dist-MSVC",
      "inherits": [ "windows-base", "dist-base", "msvc-base" ],
      "cacheVariables": { "R3_VULKAN": true }
    },
    {
      "name": "Windows-OpenGL-Debug-MSVC",
      "inherits": [ "windows-base", "debug-base", "msvc-base" ],
      "cacheVariables": { "R3_OPENGL": true }
    },
    {
      "name": "Windows-OpenGL-Release-MSVC",
